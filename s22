object MinMaxFinder {
  def main(args: Array[String]): Unit = {
    val values = Array(3, 7, 2, 8, 1, 5, 4, 6)
    val (minValue, maxValue) = minmax(values)
    println(s"Min value: $minValue")
    println(s"Max value: $maxValue")
  }

  def minmax(values: Array[Int]): (Int, Int) = {
    var minValue = values(0)
    var maxValue = values(0)

    for (value <- values) {
      if (value < minValue) {
        minValue = value
      }
      if (value > maxValue) {
        maxValue = value
      }
    }

    (minValue, maxValue)
  }
}
